# ステージング環境用の環境変数設定

# APIエンドポイント
API_BASE_URL=https://api-staging.kimiyomi.com/v1
API_TIMEOUT=30000

# Firebase設定
FIREBASE_API_KEY=staging-api-key-xxxxx
FIREBASE_AUTH_DOMAIN=staging-kimiyomi.firebaseapp.com
FIREBASE_PROJECT_ID=staging-kimiyomi
FIREBASE_STORAGE_BUCKET=staging-kimiyomi.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef

# 認証設定
AUTH_TOKEN_EXPIRY=3600
REFRESH_TOKEN_EXPIRY=604800

# ログ設定
LOG_LEVEL=debug
ENABLE_ANALYTICS=true

# 機能フラグ
ENABLE_CHAT_FEATURE=true
ENABLE_VIDEO_CALL=true
ENABLE_BETA_FEATURES=true

# AI設定
AI_MODEL_VERSION=staging-v1
AI_REQUEST_TIMEOUT=60000

# キャッシュ設定
CACHE_DURATION=3600
MAX_CACHE_SIZE=100

# パフォーマンスモニタリング
ENABLE_PERFORMANCE_MONITORING=true
TRACE_SAMPLING_RATE=0.1