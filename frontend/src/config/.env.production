# 本番環境用の環境変数設定

# API設定
API_URL=https://api.kimiyomi.com/v1
API_KEY=prod_key_xxxxxxxxxxxxx

# Firebase設定
FIREBASE_API_KEY=prod_firebase_key_xxxxxxxxxxxxx
FIREBASE_AUTH_DOMAIN=kimiyomi-prod.firebaseapp.com
FIREBASE_PROJECT_ID=kimiyomi-prod
FIREBASE_STORAGE_BUCKET=kimiyomi-prod.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890

# データベース設定
DB_HOST=prod-db.kimiyomi.com
DB_PORT=5432
DB_NAME=kimiyomi_prod
DB_USER=prod_user
DB_PASSWORD=prod_password_xxxxxxxxxxxxx

# AI設定
OPENAI_API_KEY=prod_openai_key_xxxxxxxxxxxxx
ANTHROPIC_API_KEY=prod_anthropic_key_xxxxxxxxxxxxx

# セキュリティ設定
JWT_SECRET=prod_jwt_secret_xxxxxxxxxxxxx
ENCRYPTION_KEY=prod_encryption_key_xxxxxxxxxxxxx

# サービス設定
LOG_LEVEL=error
ENABLE_ANALYTICS=true
CACHE_TTL=3600
MAX_UPLOAD_SIZE=10485760

# サードパーティ連携
STRIPE_SECRET_KEY=prod_stripe_key_xxxxxxxxxxxxx
SENDGRID_API_KEY=prod_sendgrid_key_xxxxxxxxxxxxx